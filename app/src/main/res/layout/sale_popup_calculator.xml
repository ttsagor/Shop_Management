<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        android:background="#fff"
        android:id="@+id/root_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".14"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pop_cal_text"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:gravity="right|bottom"
                android:textColor="#000"
                android:scrollbars = "vertical"
                android:fadeScrollbars="false"
                android:textSize="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".86"
            android:weightSum=".86"
            android:orientation="vertical"
            android:background="#cccccc">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".14"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="C"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_cc"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="%"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_per"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="÷"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_div"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_c"
                        android:background="@drawable/ic_backspace"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".14"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="৭"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_7"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="৮"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_8"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="৯"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_9"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="x"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_multi"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".14"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="৪"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_4"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="৫"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_5"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="৬"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_6"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_minus"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".14"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="১"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_1"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="২"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_2"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="৩"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_3"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_add"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".14"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="০"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_0"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="০০"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_00"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="."
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_dot"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:padding="3dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="="
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:id="@+id/btn_equal"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textSize="50dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".16"
                android:weightSum="1"
                android:orientation="horizontal"
                android:background="#fff">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/add_calculation">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:text="যুক্ত করেন"
                            android:textColor="@color/colorPrimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cal_add_button"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/close_calculation">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:text="বন্ধ করেন"
                            android:textColor="@color/red_background"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cal_close_button"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
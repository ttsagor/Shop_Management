<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        android:background="#fff"
        android:id="@+id/root_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".14"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pop_cal_text"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:gravity="right|bottom"
                android:textColor="#000"
                android:scrollbars = "vertical"
                android:fadeScrollbars="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".14"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_cc"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="%"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_per"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_div"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_c"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".14"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="৭"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_7"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="৮"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="৯"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_9"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_multi"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".14"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="৪"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="৫"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="৬"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_minus"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".14"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="১"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="২"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="৩"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_add"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".14"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="০"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="০০"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_dot"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/btn_equal"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".16"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:text="যুক্ত করেন"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cal_add_button"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:text="বন্ধ করেন"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cal_close_button"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>